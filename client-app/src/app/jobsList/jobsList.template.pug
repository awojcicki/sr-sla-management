ul.list-group
    li.list-group-item(ng-repeat="job in $ctrl.data.jobs")
        h4.list-group-item-heading {{job.name}}
        p refNumber : {{job.refNumber}}
        p postingStatus : {{job.postingStatus}}
        p(ng-if="job.unpostingDate") unpostingDate : {{job.unpostingDate | date}}


        input(type='date', name='calendar', ng-model="job.unpostingDate")

        button.btn.btn-primary.btn-lg(ng-click="$ctrl.actions.unPost(job)") unpost